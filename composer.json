{
    "name": "AlAdhan.com App",
    "description": "Based on the Slim Framework Skeleton",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "homepage": "https://aladhan.com",
    "license": "MIT",
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "aladhan/api-client": "^1.14",
        "oscarotero/psr7-middlewares": "^3.20"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
	"scripts": {
        "start": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit"
	}

}
